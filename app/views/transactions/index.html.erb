<h1>Transactions</h1>

<%= link_to 'Back', root_path %> | <%= link_to 'New transaction', new_transaction_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Payment Method</th>
    <th>Amount</th>
    <th>Submit Date</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>

  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.name %></td>
      <td><%= transaction.payment_method %></td>
      <td align="right"><%= number_to_currency(transaction.amount) %></td>
      <td><%= transaction.submit_date.strftime("%b %d %Y") %></td>
      <td><%= transaction.status %></td>
      <td><%= link_to 'Show', transaction_path(transaction) %></td>
      <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
      <td><%= link_to 'Delete', transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>